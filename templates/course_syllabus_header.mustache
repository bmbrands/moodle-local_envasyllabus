{{!
  @template local_envasyllabus/course_syllabus_header

  Syllabus template
  The purpose of this template is to output the syllabus of a course

  Example context (json):
  {
    "coursedata": { "fullname": "Course name", "courseimage": "https://moodlesite/theme/image.php/boost/block_myoverview/1535727318/courses" },
    "headerdata": [ { "class": "class", "icon": "icon", "title": "title", "value": "value" } ]
  }

}}

<div class="local-envasyllabus-course-syllabus-header d-flex">
    <div class="mr-3">
        <img class="img-fluid syllabus-header-img" src="{{coursedata.courseimage}}" alt="{{coursedata.fullname}}">
    </div>
    <div class="flex-grow-1 ml-2">
        <table class="table table-borderless syllabus-data">
            {{#headerdata}}
                <tr class="{{class}}">
                    <td class="data-label">{{#icon}}{{#pix}}{{.}}, local_envasyllabus, {{title}}{{/pix}}{{/icon}}{{title}}</td>
                    <td class="data-value">{{value}}</td>
                </tr>
            {{/headerdata}}
        </table>
    </div>
</div>