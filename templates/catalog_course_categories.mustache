{{!
    @template local_envasyllabus/catalog_course_category

    This template renders the courses categories as a list

    Example context (json):
    {
        "nocoursesimg": "https://moodlesite/theme/image.php/boost/block_myoverview/1535727318/courses",
        "grouping": "all",
        "sort": "fullname",
    }
}}
<div id="catalog-course-category-{{uniqid}}">
    {{#sortedCourses}}
        {{#semesters}}
            <div class="card-group" role="list">
                <div class="row-fluid">
                    {{#courses}}
                        <div class="col-4 span4">
                            <div class="card course-card" role="listitem" data-course-id="{{{id}}}" data-view-url="{{viewurl}}" style="max-width: 18rem;">
                                <img class="card-img-top card-img img-fluid course-img" src="{{courseimageurl}}" alt="{{#str}}aria:courseimage, core_course{{/str}}">
                                <div class="card-body" id="course-info-container-{{id}}-{{uniqid}}">
                                    <div class="d-flex align-items-start">
                                        <div class="w-100 text-truncate">
                                            <div class="text-muted muted d-flex mb-1 flex-wrap">
                                        <span class="sr-only">
                                            {{#str}}aria:courseshortname, core_course{{/str}}
                                        </span>
                                                <div>
                                                    {{{shortname}}}
                                                </div>
                                            </div>
                                            <a href="{{viewurl}}" class="aalink coursename mr-2">
                                    <span class="sr-only">
                                        {{#str}}aria:coursename, core_course{{/str}}
                                    </span>
                                                {{$coursename}}{{/coursename}}
                                            </a>
                                            {{^visible}}
                                                <div class="d-flex flex-wrap">
                                                    <span class="tag tag-info">{{#str}} hiddenfromstudents {{/str}}</span>
                                                </div>
                                            {{/visible}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{/courses}}
                </div>
            </div>
        {{/semesters}}
    {{/sortedCourses}}
</div>

